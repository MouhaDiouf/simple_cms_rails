
<% if !flash[:error].blank? %>
<div class="error">
  <% flash[:error].each do |error| %>
    <p><%= error %></p>
  <% end %>
</div>
<% end %>

<%= link_to("<< Back to List", sections_path(:page_id => @page.id), :class => 'back-link') %>

<div class="sections new">
  <h2>Create Section</h2>

  <%= form_for(@section, :url => section_path(@section, :page_id => @page.id)) do |f| %>

  <%= render(partial: 'form', locals: {:f => f}) %>


    <div class="form-buttons">
      <%= f.submit("Update Section") %>
    </div>

  <% end %>
</div>
